{
  "include": [
    "app"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}